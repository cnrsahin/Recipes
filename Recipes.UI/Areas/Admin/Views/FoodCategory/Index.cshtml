@model FoodCategoryIndexViewModel
@{ ViewBag.Title = "Kategori Yönetimi"; }

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panel</a></li>
    <li class="breadcrumb-item active">Kategoriler</li>
</ol>

<div id="placeModal" aria-hidden="true"></div>
<div class="card mb-4">
    <div class="card-header">
        <div class="mb-2 text-center">
            <a class="btn btn-lg btn-outline-success" id="AddBtn">Kategori Ekle</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="homeDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori Adı</th>
                        <th>Ekleyen Kullanıcı</th>
                        <th>Kategori Fotoğrafı</th>
                        <th>Kategori Açıklaması</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.FoodCategories)
                    {
                        <tr>
                            <th>@category.Id</th>
                            <td>@category.CategoryName</td>
                            <td>@category.UserName</td>
                            <td><img src="~/Pictures/foodCategoryImgs/@category.CategoryPicture" class="table-image" /></td>
                            <td>@category.CategoryDescription</td>
                            <td>
                                <button class="btn btn-sm btn-info">Güncelle</button>
                                <button class="btn btn-sm btn-danger" id="delete" data-id="@category.Id">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminPages/js/dataTableTurkish.js" type="text/ecmascript"></script>
    <script src="AdminPages/js/toastrOptions.js" type="text/ecmascript"></script>
    <script src="~/AdminPages/js/foodCategoryIndex.js" type="text/ecmascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js" crossorigin="anonymous"></script>

}