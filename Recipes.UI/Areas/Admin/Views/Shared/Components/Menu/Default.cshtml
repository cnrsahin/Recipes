@model RightSideBarViewModel

<nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
    <div class="sb-sidenav-menu">
        <div class="nav">
            <div class="sb-sidenav-menu-heading">Ana Menü</div>

            <a class="nav-link" asp-controller="Home" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-drumstick-bite"></i></div>
                Panel
            </a>

            <div class="sb-sidenav-menu-heading">İçerik Menüsü</div>

            <a class="nav-link" asp-controller="Recipe" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-apple-alt"></i></div>
                Tarifler (@Model.RecipeCount.ToString())
            </a>

            <a class="nav-link" asp-controller="FoodCategory" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-utensils"></i></div>
                Kategoriler (@Model.FoodCategoryCount.ToString())
            </a>

            <a class="nav-link" asp-controller="Comment" asp-action="Index">
                <div class="sb-nav-link-icon"><i class="fas fa-carrot"></i></div>
                Yorumlar (@Model.CommentCount.ToString())
            </a>
            @if (Model.Roles.Any(r => r.Equals("Admin")))
            {
                <div class="sb-sidenav-menu-heading">Yönetim Menüsü</div>

                <a class="nav-link" asp-controller="User" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-seedling"></i></div>
                    Kullanıcılar (@Model.UserCount.ToString())
                </a>

                <a class="nav-link" asp-controller="Role" asp-action="Index">
                    <div class="sb-nav-link-icon"><i class="fas fa-eye-slash"></i></div>
                    Roller (@Model.RoleCount.ToString())
                </a>
            }

            <div class="sb-sidenav-menu-heading">Diğer</div>

            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                <div class="sb-nav-link-icon"><i class="fas fa-trash"></i></div>
                Çöp Kutusu
                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
            </a>

            <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                <nav class="sb-sidenav-menu-nested nav">

                    <a class="nav-link" asp-controller="Recipe" asp-action="GetRemoved">
                        <div class="sb-nav-link-icon"><i class="fas fa-apple-alt"></i></div>
                        Tarifler (@Model.RecipeDeletedCount.ToString())
                    </a>

                    <a class="nav-link" asp-controller="FoodCategory" asp-action="GetRemoved">
                        <div class="sb-nav-link-icon"><i class="fas fa-utensils"></i></div>
                        Kategoriler (@Model.FoodCategoryDeletedCount.ToString())
                    </a>

                    <a class="nav-link" asp-controller="Comment" asp-action="GetRemoved">
                        <div class="sb-nav-link-icon"><i class="fas fa-carrot"></i></div>
                        Yorumlar (@Model.CommentDeletedCount.ToString())
                    </a>
                </nav>
            </div>
        </div>
    </div>
    <div class="sb-sidenav-footer">
        <div class="small">Kullanıcı:</div>
        @Model.User.Fullname
    </div>
</nav>