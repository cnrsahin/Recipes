@model RecipeIndexViewModel
@{ ViewBag.Title = "Yemek Tarif Yönetimi"; }

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Panel</a></li>
    <li class="breadcrumb-item active">Yemek Tarifleri</li>
</ol>

<div class="card mb-4">
    <div class="card-header">
        <div class="mb-2 text-center">
            <a class="btn btn-lg btn-outline-success" id="AddBtn">Yemek Tarifi Ekle</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="homeDataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tarif Adı</th>
                        <th>Ekleyen</th>
                        <th>Kategorisi</th>
                        <th>Tarif Fotoğrafı</th>
                        <th>Tarif Başlığı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var recipe in Model.Recipes)
                    {
                        <tr>
                            <th>@recipe.Id</th>
                            <td>@recipe.FoodName</td>
                            <td>@recipe.UserName</td>
                            <td>@recipe.FoodCategoryName</td>
                            <td><img src="~/Pictures/recipesImgs/@recipe.FoodPicture" class="table-image" /></td>
                            <td>@recipe.FoodTitle</td>
                            <td>
                                <button class="btn btn-sm btn-warning">Detay</button>
                                <button class="btn btn-sm btn-info">Güncelle</button>
                                <button class="btn btn-sm btn-danger" id="deleteOrUndoDelete" data-id="@recipe.Id">Sil</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminPages/js/dataTableTurkish.js" type="text/ecmascript"></script>
    <script src="~/AdminPages/js/recipeIndex.js" type="text/ecmascript"></script>
}